<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".your_plant">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardMaxElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <!-- In the above cardview widget cardelevation property will give elevation to your card view
                    card corner radius will provide radius to your card view card background color will give
                    background color to your card view card max elevation will give the cardview maximum
                    elevation card prevent corner overlap will add padding to CardView on v20 and before to
                    prevent intersections between the Card content and rounded corners. Card use compact padding
                    will add padding in API v21+ as well to have the same measurements with previous versions -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="4sp"
                    android:layout_height="wrap_content">

                    <!-- ImageVIew to display our Course Image -->
                    <ImageView
                        android:id="@+id/idIVCourseImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/three" />

                    <!-- Text View to display Course Name -->
                    <TextView
                        android:id="@+id/idTVCourseName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage"
                        android:text="Farmer name : Raman"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <!-- Text VIew to display Course Rating -->
                    <!-- Image used in present in drawable folder -->
                    <TextView
                        android:id="@+id/idTVCourseRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idTVCourseName"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage"
                        android:drawablePadding="2dp"
                        android:text="Property address : Bihar"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        />

                    <TextView
                        android:id="@+id/pdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idTVCourseRating"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage"
                        android:drawablePadding="2dp"
                        android:text="Plant description : Mango"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        />

                    <TextView
                        android:id="@+id/amt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pdesc"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage"
                        android:drawablePadding="2dp"
                        android:text="Amount : Rs 500"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/amt"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage"
                        android:drawablePadding="2dp"
                        android:text="Adopt again"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:shadowRadius="@integer/material_motion_duration_medium_2"
                        android:backgroundTint="#78C257"
                        android:textSize="13sp"
                        android:padding="0sp"
                        android:background="@drawable/shape"
                        android:textStyle="italic"></Button>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp"
                card_view:cardMaxElevation="10dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:cardUseCompatPadding="true">

                <!-- In the above cardview widget cardelevation property will give elevation to your card view
                    card corner radius will provide radius to your card view card background color will give
                    background color to your card view card max elevation will give the cardview maximum
                    elevation card prevent corner overlap will add padding to CardView on v20 and before to
                    prevent intersections between the Card content and rounded corners. Card use compact padding
                    will add padding in API v21+ as well to have the same measurements with previous versions -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="8sp"
                    android:layout_height="wrap_content">

                    <!-- ImageVIew to display our Course Image -->
                    <ImageView
                        android:id="@+id/idIVCourseImage2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/one" />

                    <!-- Text View to display Course Name -->
                    <TextView
                        android:id="@+id/idTVCourseName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage2"
                        android:text="Farmer name : Aman Sinha"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <!-- Text VIew to display Course Rating -->
                    <!-- Image used in present in drawable folder -->
                    <TextView
                        android:id="@+id/idTVCourseRating2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idTVCourseName2"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage2"
                        android:drawablePadding="2dp"
                        android:text="Property address : Karnataka"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        />

                    <TextView
                        android:id="@+id/pdesc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idTVCourseRating2"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage2"
                        android:drawablePadding="2dp"
                        android:text="Plant description : Mango"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        />

                    <TextView
                        android:id="@+id/amt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pdesc2"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage2"
                        android:drawablePadding="2dp"
                        android:text="Amount : Rs 300"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/amt2"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage2"
                        android:drawablePadding="2dp"
                        android:text="Adopt again"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:shadowRadius="@integer/material_motion_duration_medium_2"
                        android:backgroundTint="#78C257"
                        android:textSize="14sp"
                        android:padding="0sp"
                        android:background="@drawable/shape"
                        android:textStyle="italic"></Button>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp"
                card_view:cardMaxElevation="10dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:cardUseCompatPadding="true">

                <!-- In the above cardview widget cardelevation property will give elevation to your card view
                    card corner radius will provide radius to your card view card background color will give
                    background color to your card view card max elevation will give the cardview maximum
                    elevation card prevent corner overlap will add padding to CardView on v20 and before to
                    prevent intersections between the Card content and rounded corners. Card use compact padding
                    will add padding in API v21+ as well to have the same measurements with previous versions -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="8sp"
                    android:layout_height="wrap_content">

                    <!-- ImageVIew to display our Course Image -->
                    <ImageView
                        android:id="@+id/idIVCourseImage3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/five" />

                    <!-- Text View to display Course Name -->
                    <TextView
                        android:id="@+id/idTVCourseName3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage3"
                        android:text="Farmer name : Ravi Patel"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <!-- Text VIew to display Course Rating -->
                    <!-- Image used in present in drawable folder -->
                    <TextView
                        android:id="@+id/idTVCourseRating3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idTVCourseName3"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage3"
                        android:drawablePadding="2dp"
                        android:text="Property address : Mumbai"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        />

                    <TextView
                        android:id="@+id/pdesc3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idTVCourseRating3"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage3"
                        android:drawablePadding="2dp"
                        android:text="Plant description : Mango"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        />

                    <TextView
                        android:id="@+id/amt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pdesc3"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage3"
                        android:drawablePadding="2dp"
                        android:text="Amount : Rs 700"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/amt3"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/idIVCourseImage3"
                        android:drawablePadding="2dp"
                        android:text="Adopt again"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:shadowRadius="@integer/material_motion_duration_medium_2"
                        android:backgroundTint="#78C257"
                        android:textSize="13sp"
                        android:padding="0sp"
                        android:background="@drawable/shape"
                        android:textStyle="italic"></Button>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>